<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/custom_worksans_bold_font"
            android:text="@string/str_edit"
            android:textSize="18sp" />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="5dp"
            android:layout_below="@id/tv_title"
            android:layout_marginBottom="10dp"
            android:background="@drawable/item_view_rounded"
            android:inputType="text"
            android:textSize="18sp" />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_body"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@id/et_title"
            android:layout_marginBottom="10dp"
            android:background="@drawable/item_view_rounded"
            android:gravity="top"
            android:lines="6"
            android:padding="5dp"
            android:textSize="18sp" />


        <Button
            android:id="@+id/bn_single"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_body"
            android:background="@drawable/item_view_rounded"
            android:fontFamily="@font/custom_worksans_bold_font"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:backgroundTint="@color/app_color_1"
            android:textSize="16sp" />

    </RelativeLayout>

</LinearLayout>